<%- include('./layout/plate.ejs') %>
  <link rel="stylesheet" href="/stylesheet/showBooks.css">
<link rel="stylesheet" href="/stylesheet/index.css">
  <body>
    <div class="main">
      <!-- Burger Menu -->
      <div class="burger" id="burger">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
      </div>

      <!-- Navigation Menu -->
      <div class="nav" id="nav">
        <nav class="navbar">
          <div class="logo">Booksy</div>
          <ul class="nav-links" id="nav-links">
            <li><a href="/"><i class="fa-solid fa-house"></i> Home</a></li>
            <li><a href="/addbook"><i class="fa-solid fa-book"></i> AddBooks</a></li>
            <li><a href="/about"><i class="fa-solid fa-address-card"></i> About</a></li>
            <li><a href="/contact"><i class="fa-solid fa-phone"></i> Contact</a></li>
            <li>
              <% if (islog) { %>
                <a href="/logout" class="anchertag"><i class="fa-solid fa-user"></i>&nbsp;&nbsp;logout</a>
                <% } else { %>
                  <a href="/login" class="anchertag"><i class="fa-solid fa-user"></i>&nbsp;&nbsp;Login</a>
                  <% } %>
            </li>
            <li><a href="/cart" class="anchertag"><i class="fa-solid fa-cart-shopping"></i></a></li>
          </ul>
        </nav>
      </div>

      <!-- Body Content -->
      <div class="body">
        <div class="head">
          <div class="head2">
            <div class="hed">
              <h3 class="heading">Booksy</h3>
            </div>
            <div class="loging">
              <% if (islog) { %>
                <a href="/logout" class="anchertag"><i class="fa-solid fa-user"></i>&nbsp;&nbsp;logout</a>
                <% } else { %>
                  <a href="/login" class="anchertag"><i class="fa-solid fa-user"></i>&nbsp;&nbsp;Login</a>
                  <% } %>

                    <a href="/myorder" class="anchertag"><i class="fa-solid fa-cart-shopping"></i></a>
                    <!-- <a href="/" class="anchertag"><i class="fa-solid fa-cart-shopping"></i></a> -->
            </div>
          </div>

        </div>
        <div class="box">
          <div class="container">
            <h1 class="hedaring">
              <%= book.title %>
            </h1>

            <div class="book-grid">
              <div class="book-card">
                <% if (book.image) { %>
                  <img src="<%= book.image %>" alt="Book Image" />
                  <% } else { %>
                    <div class="no-img">No Image</div>
                    <% } %>
                      <p><strong>Price:</strong> â‚¹<%= book.price %>
                      </p>
                      <p><strong>Owner:</strong>
                        <%= book.owner.name || 'Unknown' %>
                      </p>
                      <p><strong>Address:</strong>
                        <%= book.address %>
                      </p>
                      <p><strong>Call for Order:</strong>
                        <%= book.owner.phoneNumber%>
                      </p>
                      <a href="/orderbook/<%=book._id%>"><button class="btn">Order</button></a>
                      <!-- <button class="btn">Order</button> -->
                      <%if(userId){%>
                        <%if(userId==book.owner._id){%>
                          <a href=""><button class="btn">Edit</button></a>
                          <a href="/deletebook/<%=book._id%>"><button class="btn btndark">Delete</button></a>
                          <%}%>
                            <%}%>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>
        const burger = document.getElementById('burger');
        const nav = document.getElementById('nav');

        burger.addEventListener('click', () => {
          nav.classList.toggle('show-nav');
        });
      </script>
  </body>

  </html>