<%- include('./layout/plate.ejs') %>
    <link rel="stylesheet" href="/stylesheet/index.css">

    <body>
        <div class="main">
            <!-- Burger Menu -->
            <div class="burger" id="burger">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>

            <!-- Navigation Menu -->
            <!-- Navigation Menu -->
            <div class="nav" id="nav">
                <nav class="navbar">
                    <!-- Close Button (visible in mobile view) -->
                    <button class="close-btn" id="closeBtn">&times;</button>

                    <div class="logo">Booksy</div>
                    <ul class="nav-links" id="nav-links">
                        <li><a href="/"><i class="fa-solid fa-house"></i> Home</a></li>
                        <li><a href="/addbook"><i class="fa-solid fa-book"></i> AddBooks</a></li>
                        <li><a href="/about"><i class="fa-solid fa-address-card"></i> About</a></li>
                        <li><a href="/contact"><i class="fa-solid fa-phone"></i> Contact</a></li>
                        <li>
                            <% if (islog) { %>
                                <a href="/logout" class="anchertag"><i
                                        class="fa-solid fa-user"></i>&nbsp;&nbsp;logout</a>
                                <% } else { %>
                                    <a href="/login" class="anchertag"><i
                                            class="fa-solid fa-user"></i>&nbsp;&nbsp;Login</a>
                                    <% } %>
                        </li>
                        <li><a href="/myorder" class="anchertag"><i class="fa-solid fa-cart-shopping"></i> My Orders</a>
                        </li>
                    </ul>
                </nav>
            </div>


            <!-- Body Content -->
            <div class="body">
                <div class="head">
                    <div class="head2">
                        <div class="hed">
                            <h3 class="heading">Booksy</h3>
                        </div>
                        <div class="loging">
                            <% if (islog) { %>
                                <a href="/logout" class="anchertag"><i
                                        class="fa-solid fa-user"></i>&nbsp;&nbsp;logout</a>
                                <% } else { %>
                                    <a href="/login" class="anchertag"><i
                                            class="fa-solid fa-user"></i>&nbsp;&nbsp;Login</a>
                                    <% } %>

                                        <a href="/myorder" class="anchertag"><i
                                                class="fa-solid fa-cart-shopping"></i></a>
                        </div>
                    </div>

                </div>
                <div class="box">
                    <% if (books && books.length> 0) { %>
                        <% books.forEach(function(book) { %>
                            <div class="card">
                                <a href="/detailsbook/<%=book._id%>">
                                    <button class="btn">
                                        <div class="img">
                                            <img src="<%=book.image%>">
                                        </div>
                                        <div class="price">
                                            <p>â‚¹<%=book.price%>
                                            </p>
                                        </div>
                                    </button>
                                </a>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p>No books found.</p>
                                    <% } %>
                </div>
            </div>

            <script>
                const burger = document.getElementById('burger');
                const nav = document.getElementById('nav');
                const closeBtn = document.getElementById('closeBtn');

                burger.addEventListener('click', () => {
                    nav.classList.toggle('show-nav');
                });

                closeBtn.addEventListener('click', () => {
                    nav.classList.remove('show-nav');
                });
            </script>

    </body>

    </html>